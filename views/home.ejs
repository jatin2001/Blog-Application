<%if(isLogin) {%>
    <%-include("./partial/Loginheader") -%>
<%} else {%>
    <%-include("./partial/header") -%>
<%}%>
    <h1>Blogs</h1>
    <br>
    <%posts.forEach((item)=>{%>
        <br>
            <h2><%=item.title.toUpperCase()%></h2>
        
            <p><%=item.content.substring(0,100)%>...
                <%if(item.content.length>100) {%>
                    <a href='/posts/<%=item.title %>'>Read More</a>
                <%} else { %>
                    <a href='/posts/<%=item.title %>'>Read Post</a>
                <%}%>  
                
              
            </p>
    
        <%})%>
<%-include("./partial/footer")-%>